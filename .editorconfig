# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# See https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.rs]
indent_size = 4
max_line_length = 100

[*.toml]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{go,php}]
indent_size = 4

[Makefile]
indent_style = tab

[*.sh]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.xml]
indent_size = 2

[.gitignore]
indent_size = 2

[LICENSE]
insert_final_newline = false